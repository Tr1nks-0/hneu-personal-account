<!DOCTYPE html>
<%@ page language="java" pageEncoding="UTF-8" contentType="text/html;charset=UTF-8" session="false" %>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="sec" %>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring" %>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib prefix="tags" tagdir="/WEB-INF/tags" %>
<html>
<head lang="ua">
    <title><spring:message code="${title}"/></title>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">

    <tags:css/>

    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="hold-transition skin-blue sidebar-mini <c:if test="${'top.menu.schedule' eq title}">sidebar-collapse</c:if>">

    <c:set var="profileImage" value="/students/${profile.id}/photo"/>

    <div class="wrapper">
        <header class="main-header">
            <a href="/account" class="logo">
                <span class="logo-mini"><small><img src="/resources/img/logo-sm.svg"/></small></span>
                <span class="logo-lg"><b>Кабінет</b>Студента</span>
            </a>

            <nav class="navbar navbar-static-top">
                <a href="#" class="sidebar-toggle" data-toggle="offcanvas" role="button">
                    <span class="sr-only"></span>
                </a>
                <div class="navbar-custom-menu">
                    <ul class="nav navbar-nav">
                        <li class="dropdown user user-menu">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                                <img src="${profileImage}" class="user-image profile-photo" alt="User Image">
                                <span class="hidden-xs"><c:out value="${profile.surname} ${profile.name}"/></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li class="user-header">
                                    <img src="${profileImage}" class="img-circle profile-photo-large" alt="User Image">
                                    <p>
                                        <c:out value="${profile.surname} ${profile.name}"/> </br>
                                        <small><c:out value="${profile.group.name}"/></small>
                                    </p>
                                </li>
                                <li class="user-footer">
                                    <div class="pull-left">
                                        <a href="/account" class="btn btn-default btn-flat"><spring:message code="top.menu.home"/></a>
                                    </div>
                                    <div class="pull-right">
                                        <a href="/logout" class="btn btn-default btn-flat"><spring:message code="top.menu.exit"/></a>
                                    </div>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </nav>
        </header>

        <aside class="main-sidebar">
            <section class="sidebar">
                <div class="user-panel">
                    <div class="image">
                        <img src="${profileImage}" class="img-circle profile-photo-large" alt="User Image">
                    </div>
                    <div class="info">
                        <p><c:out value="${profile.surname} ${profile.name}"/></p>
                        <c:out value="${profile.group.name}"/>
                    </div>
                </div>

                <ul class="sidebar-menu">
                    <li class="header">ГОЛОВНЕ МЕНЮ</li>
                    <li <c:if test="${'top.menu.home' eq title}">class="active"</c:if> >
                        <a href="/account">
                            <i class="fa fa-home "></i> <span><spring:message code="top.menu.home"/></span>
                        </a>
                    </li>
                    <li <c:if test="${'top.menu.schedule' eq title}">class="active"</c:if>>
                        <a href="/account/schedule">
                            <i class="fa fa-calendar"></i> <span><spring:message code="top.menu.schedule"/></span>
                        </a>
                    </li>
                    <li>
                        <form method="post" id="studentForm" name="studentForm" action="http://services.ksue.edu.ua:8081/student/report" target="marks-window">
                            <input type="hidden" size="15" name="lastName" value="${profile.surname}">
                            <input type="hidden" size="15" name="code" value="${profile.passportNumber}">
                        </form>
                        <a class="current-marks">
                            <i class="fa fa-bar-chart"></i> <span><spring:message code="top.menu.journal"/></span>
                        </a>
                    </li>
                    <li <c:if test="${'top.menu.documents' eq title}">class="active"</c:if>>
                        <a href="/account/documents">
                            <i class="fa fa-files-o"></i> <span><spring:message code="top.menu.documents"/></span>
                        </a>
                    </li>
                    <li <c:if test="${'top.menu.contacts' eq title}">class="active"</c:if>>
                        <a href="/account/contactUs">
                            <i class="fa fa-envelope"></i> <span><spring:message code="top.menu.contacts"/></span>
                        </a>
                    </li>
                    <li>
                        <a href="/logout">
                            <i class="fa fa-share"></i> <span><spring:message code="top.menu.exit"/></span>
                        </a>
                    </li>
                </ul>
            </section>
        </aside>
